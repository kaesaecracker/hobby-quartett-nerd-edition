<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>
    {% for hobby_group in hobby_groups %}
        <section class="hobby-group container">
            <h2>{{ hobby_group.name }}</h2>
            <div class="row row-cols-4 width-100">
                {% for hobby in hobby_group.cards %}
                    <div class="card h-100">
                        <img src="{{ hobby.image}}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{ hobby.name }}</h5>
                            <p class="card-text">{{ hobby.description | default('TODO Breschreibung') }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    {% endfor %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  </body>
</html>
