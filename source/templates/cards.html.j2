<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Hello, world!</title>
</head>

{% macro hobby_aspect(aspect_key, aspect_data, hobby) -%}
<tr>
    <td>
        {{aspect_data.name}}
    </td>
    <td>
        {% if aspect_key in hobby.aspects %}
        {{ hobby.aspects[aspect_key] }}
        {% else %}
        <i> missing </i>
        {% endif %}
    </td>
</tr>
{%- endmacro %}

{% macro hobby_aspects(hobby) -%}
{% if hobby.aspects is defined %}
<div class="card-body">
    <table class="table w-100">
        {% for aspect_key, aspect_data in aspect_metadata | dictsort %}
        {{hobby_aspect(aspect_key, aspect_data, hobby)}}
        {% endfor %}
    </table>
</div>
{% else %}
<p>Aspects fehlen!</p>
{% endif %}
{%- endmacro %}

{% macro hobby_image(hobby) -%}
<div class="card-img-top">
    {% if hobby.image is defined %}
    {% if 'src' in hobby.image %}
    <img src="{{ hobby.image.src }}" class="w-100" alt="{{ hobby.image.alt }}" title="{{ hobby.image.alt }}">
    {% else %}
    <p>Missing image for prompt: {{ hobby.image.alt }}</p>
    {% endif %}
    {% else %}
    <p>Missing image</p>
    {% endif %}
</div>
{%- endmacro %}

{% macro hobby_titlerow(group, hobby, loop) -%}
<div class="card-title">
    <h5>{{ hobby.name }}</h5>
    <p>{{group.name}} {{loop.index}}/{{loop.length}}</p>
    <div class="card-debug" style="display: none">
        {{ hobby }}
    </div>
</div>
{%- endmacro %}

<body>
    {% for hobby_group in hobby_groups %}
    <section class="hobby-group container-fluid">
        <h2>{{ hobby_group.name }}</h2>

        <div class="row row-cols-4 width-100">
            {% for hobby in hobby_group.cards %}
            <div class="p-2">
                <div class="card p-2">
                    {{ hobby_image(hobby) }}
                    {{ hobby_titlerow(hobby_group, hobby, loop) }}
                    {{ hobby_aspects(hobby) }}
                </div>
            </div>
            {% endfor %}
        </div>
    </section>
    {% endfor %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>
